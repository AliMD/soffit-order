{
  "version": "0.25.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "package": [
    "core/*",
    "services/*",
    "ui-kit/*",
    "demo"
  ],
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "angular",
      "message": "release: %s"
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": ["*.md"]
    },
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"]
    },
    "run": {
      "stream": true
    }
  }
}
