{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "yarn",
  "packages": ["core/*", "services/*", "ui/*", "uniquely/*", "labs/*"],
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "angular",
      "ignoreChanges": ["*.md"],
      "message": "release: new independent version",
      "private": false,
      "forcePublish": true,
      "forceGitTag": true,
      "push": true,
      "createRelease": "github"
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": ["*.md"]
    },
    "run": {
      "stream": true
    }
  }
}
