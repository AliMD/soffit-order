{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.32.0",
  "npmClient": "yarn",
  "packages": [
    "core/*",
    "services/*",
    "ui/*",
    "demo"
  ],
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "angular",
      "message": "release: %s"
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": ["*.md"]
    },
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"]
    },
    "run": {
      "stream": true
    }
  }
}
